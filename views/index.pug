							.col-md-9
								a(href='#')
									input.add-input(placeholder='Name') 							
							.col-md-1
								a(href='#')
									img.add-ok(src='images/add-ok.png')
							.col-md-1
								a(href='#')
									img.add-not(src='images/add-not.png')
					li.list-group-item(ng-repeat="item in list.items")
						a.link-do(href='#') {{item.date}} {{item.name}}
						span.badge {{item.count}}
					
					li.list-group-item.text-center
