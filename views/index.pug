extends layout

block content
	
	.container
		.row
			.col-md-12
				nav.navbar.navbar-inverse(role='navigation')
					a.navbar-brand.title-name(href='#') Todo List

		.row
			.col-md-4
				ul.list-group
					li.list-group-item.addnewmainlist(style='display: none !important;')
